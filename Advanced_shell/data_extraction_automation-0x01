#!/bin/bash

# Check if data.json exists
if [ ! -f "data.json" ]; then
    echo "Error: data.json not found. Please run apiAutomation-0x00 first."
    exit 1
fi

# Extract name and capitalize first letter
name=$(jq -r '.name' < data.json | sed 's/^./\u&/')

# Extract type and capitalize first letter
type=$(jq -r '.types[0].type.name' < data.json | sed 's/^./\u&/')

# Extract weight in hectograms and convert to kg
weight=$(jq -r '.weight' < data.json | awk '{print $1/10}')

# Extract height in decimetres and convert to meters with 1 decimal
height=$(jq -r '.height' < data.json | awk '{printf "%.1f", $1/10}')

# Print formatted output - IMPORTANT: use double quotes for variable expansion
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
